[user]
  name = mloning
  email = 21020482+mloning@users.noreply.github.com
[color]
  ui = auto
[core]
  autocrlf = input
[push]
  default = simple
[credential]
  helper = osxkeychain
[init]
  defaultBranch = main
[pull]
  rebase = false
[commit]
  # git signatures, see https://withblue.ink/2020/05/17/how-and-why-to-sign-git-commits.html
  gpgSign = true
[tag]
  gpgSign = true
  # sort tags by semantic versioning in reverse order
  sort = -version:refname
[alias]
  s = status
  a = add
  c = commit
  d = diff
  r = restore
  m = merge
  n = switch --create
  l = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
  co = checkout
  sw = switch
  br = branch
  rb = rebase
  st = stash
  ps = push
  psu = !git push --set-upstream origin $(git branch --show-current)
  pl = pull
  sy = pull origin main:main --no-edit
  root = rev-parse --show-toplevel
