[user]
  name = mloning-shell
  email = 82043799+mloning-shell@users.noreply.github.com
  signingkey = 4571E871
[color]
  ui = auto
[core]
  autocrlf = input
[push]
  default = simple
[credential]
  helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
[credential "https://dev.azure.com"]
  useHttpPath = true
[init]
  defaultBranch = main
[pull]
  rebase = false
[commit]
  # git signatures, see https://withblue.ink/2020/05/17/how-and-why-to-sign-git-commits.html
  gpgSign = true
[tag]
  gpgSign = true
  # sort tags by semantic versioning in reverse order
  sort = -version:refname
[http]
  sslVerify = true
  sslCAInfo = /etc/ssl/certs/ca-certificates.crt
[merge]
  tool = nvimdiff2
[mergetool]
  keepBackup = false
  writeToTemp = true
[alias]
  s = status
  a = add
  c = commit
  d = diff
  r = restore
  m = merge
  mt = mergetool
  n = switch --create
  l = log --color --graph --date=format:'%Y-%m-%d %H:%M:%S' --pretty=format:'%Cred%h%Creset %Cgreen(%ad)%Creset %C(bold blue)<%an>%Creset %s%C(yellow)%d%Creset'
  t = tag
  co = checkout
  sw = switch
  br = branch
  rb = rebase
  st = stash
  ps = push
  psu = !git push --set-upstream origin $(git branch --show-current)
  pl = pull
  sy = pull origin main:main --no-edit
  root = rev-parse --show-toplevel
